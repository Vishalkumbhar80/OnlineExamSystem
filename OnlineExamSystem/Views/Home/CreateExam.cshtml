            <span asp-validation-for="ExamStartDate" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="ExamEndDate" class="form-label"></label>
            <input asp-for="ExamEndDate" class="form-control" type="date" />
            <span asp-validation-for="ExamEndDate" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="DurationMinutes" class="form-label"></label>
            <input asp-for="DurationMinutes" class="form-control" type="number" />
            <span asp-validation-for="DurationMinutes" class="text-danger"></span>
        </div>
        @* <div class="col-md-3">
            <label asp-for="Type" class="form-label"></label>
            <select asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<OnlineExamSystem.Models.ExamType>()"></select>
