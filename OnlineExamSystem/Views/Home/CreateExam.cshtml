            <span asp-validation-for="TotalQuestions" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="TotalMarks" class="form-label"></label>
            <input asp-for="TotalMarks" class="form-control" step="0.01" />
            <span asp-validation-for="TotalMarks" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="PassingMarks" class="form-label"></label>
            <input asp-for="PassingMarks" class="form-control" step="0.01" />
            <span asp-validation-for="PassingMarks" class="text-danger"></span>
        </div>
        <div class="col-md-3 d-flex align-items-end">
            <div class="form-check">
                <input asp-for="IsNegativeMarking" class="form-check-input" />
                <label asp-for="IsNegativeMarking" class="form-check-label"></label>
            </div>
        </div>
    </div>

   @*  <div class="mb-3">
        <label class="form-label">Sections</label>
        <div id="sectionsContainer">
        </div>
        <div class="mt-2">
            <button type="button" id="addSectionBtn" class="btn btn-secondary">Add Section</button>
