@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var username = HttpContextAccessor.HttpContext.Session.GetString("UserName");
    var role = HttpContextAccessor.HttpContext.Session.GetString("UserRole");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineExamSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        header {
            background-color: #0d6efd;
            color: white;
            padding: 10px 0;
        }

        footer {
            background-color: #0d6efd;
            color: white;
            padding: 10px;
            position: fixed;
            bottom: 0;
            width: 100%;
            text-align: center;
        }

        .navbar a, .navbar-brand {
            color: white !important;
        }

        .user-info {
            color: white;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">OnlineExamSystem</a>

                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        @if (!string.IsNullOrEmpty(role))
                        {
                            if (role == "Admin")
                            {
                                <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Dashboard">Dashboard</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Exam" asp-action="ManageExams">Manage Exams</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                            }
                            else if (role == "User")
                            {
                                <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="SelectExam">My Exams</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                            }
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        }
                    </ul>

                    <div class="d-flex align-items-center">
                        @if (!string.IsNullOrEmpty(username))
                        {
                            <div class="dropdown">
                                <a class="btn btn-light dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    @username (@role)
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" asp-controller="Login" asp-action="Logout">Logout</a></li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a class="nav-link text-light" asp-controller="Login" asp-action="UserLogin">Login</a>
                            <a class="nav-link text-light" asp-controller="Login" asp-action="UserRagister">Register</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4 mb-5">
        @RenderBody()
    </div>

    <footer>
        © 2025 - OnlineExamSystem
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
