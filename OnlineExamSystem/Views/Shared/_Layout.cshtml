@using OnlineExamSystem.Common
@inject SessionManager SessionManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineExamSystem</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />

    <style>
        /* ====== Education Theme ====== */
        body {
        background: linear-gradient(to right, #e3f2fd, #e8f5e9);
        font-family: "Segoe UI", sans-serif;
        min-height: 100vh;
        margin: 0;
        padding-bottom: 80px;
        }

        header {
        background: linear-gradient(to right, #1565c0, #1976d2);
        color: white;
        }

        .navbar-brand {
        font-weight: bold;
        font-size: 1.4rem;
        color: #fff !important;
        }

        .nav-link {
        color: #f8f9fa !important;
        font-weight: 500;
        transition: 0.3s;
        }

        .nav-link:hover {
        color: #ffeb3b !important;
        }

        main {
        background: white;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        padding: 30px;
        margin-top: 40px;
        }

        footer {
        background: linear-gradient(to right, #1565c0, #1976d2);
        color: #fff;
        text-align: center;
        padding: 12px 0;
        position: fixed;
        width: 100%;
        bottom: 0;
        }

        .edu-bg-icon {
        position: absolute;
        opacity: 0.07;
        font-size: 8rem;
        color: #1976d2;
        pointer-events: none;
        }

        .edu-bg-icon.book {
        top: 10%;
        left: 5%;
        }

        .edu-bg-icon.pencil {
        bottom: 15%;
        right: 10%;
        }
    </style>
</head>
<body>
    <div class="edu-bg-icon book">📘</div>
    <div class="edu-bg-icon pencil">✏️</div>

    <header>
        <nav class="navbar navbar-expand-sm navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">🎓 OnlineExamSystem</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    @{
                        // Get session info
                        var session = SessionManager.Data;
                        var firstName = session?.FullName ?? session?.UserName ?? string.Empty;
                        var role = session?.Role ?? "Guest";
                    }

                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (role == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="index">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Config">Manage Exams</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="ManageUsers">Manage Users</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        }
                        else if (role == "User")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="User" asp-action="SelectExam">My Exams</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="User" asp-action="ResultData">Exam History</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                        }
                    </ul>

                    <div class="d-flex align-items-center">
                        @if (!string.IsNullOrEmpty(firstName))
                        {
                            <div class="me-3 text-white d-none d-sm-block">
                                <i class="bi bi-person-circle"></i>
                                <strong class="ms-1">@firstName</strong>
                            </div>

                            <div class="dropdown">
                                <a class="btn btn-light dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @role
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li class="dropdown-header">Switch Role</li>
                                    @foreach(var roleData in SessionManager.Data.UserRoles)
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Login" asp-action="SwitchRole" asp-route-role="@roleData.RoleName">@roleData.RoleName</a>
                                        </li>
                                    }
                                   @*  <li>
                                        <a class="dropdown-item" asp-controller="Login" asp-action="SwitchRole" asp-route-role="Admin">Admin</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Login" asp-action="SwitchRole" asp-route-role="User">User</a>
                                    </li> *@
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Login" asp-action="Logout">Logout</a>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a class="nav-link text-light me-2" asp-controller="Login" asp-action="UserLogin">Login</a>
                            <a class="nav-link text-light" asp-controller="Login" asp-action="UserRagister">Register</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4 mb-5">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer>
        © @DateTime.Now.Year - OnlineExamSystem | Learning Made Simple
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
